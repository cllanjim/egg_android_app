<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

<include 
    layout="@layout/common_header_bar"
    android:id="@+id/top"
    />
<View 
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/bg_gray"
    android:layout_marginTop="10dp"
    />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        >
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/file_all"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/mine_second_14sp"
                android:id="@+id/tv_all"
                android:text="@string/mine_myfile_all"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
               
            <TextView  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/mine_second_14sp"
                android:id="@+id/tv_all_count"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text=""
                />
        </LinearLayout>
        <View 
            android:layout_width="1px"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_gray"
            />
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/file_picture"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/mine_second_14sp"
                android:id="@+id/tv_picture"
                android:text="@string/mine_myfile_picture"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
               
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/mine_second_14sp"
                android:id="@+id/tv_picture_count"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text=""
                />
        </LinearLayout>
        <View 
            android:layout_width="1px"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
              android:background="@color/bg_gray"
            />
        
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/file_video"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/mine_second_14sp"
                android:id="@+id/tv_video"
                android:text="@string/mine_myfile_video"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
               
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/mine_second_14sp"
                android:id="@+id/tv_video_count"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text=""
                />
        </LinearLayout>
        
        
    </LinearLayout>
    <View 
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/bg_gray"
    />
    
    <com.lingyang.camera.ui.widget.CustomViewPager 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager"
        ></com.lingyang.camera.ui.widget.CustomViewPager>
    
</LinearLayout>
