<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_add_waiting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_connecting"
        android:textColor="#222222"
        android:textSize="23.3dp" />

    <TextView
        android:id="@+id/tv_add_waiting_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:singleLine="true"
        android:text="@string/add_waiting_des"
        android:textColor="#222222"
        android:textSize="12.7dp" />

    <TextView
        android:id="@+id/tv_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#e63b53"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_add_camera_bg"
            android:layout_width="217.3dp"
            android:layout_height="340.3dp"
            android:layout_centerInParent="true"
            android:background="@drawable/img_add_camera_front_waiting_bg"
            android:contentDescription="@null"
            android:onClick="onClick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_add_camera"
            android:layout_width="217.3dp"
            android:layout_height="340.3dp"
            android:layout_centerInParent="true"
            android:background="@drawable/img_add_camera_front_waiting"
            android:contentDescription="@null"
            android:onClick="onClick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_add_success"
            android:layout_width="271dp"
            android:layout_height="54.7dp"
            android:layout_above="@id/iv_add_camera"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_add_success_msg"
            android:contentDescription="@null"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_add_connecting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="96.7dp"
                android:layout_height="145.3dp"
                android:contentDescription="@null"
                android:src="@drawable/img_add_camera_blue" />

            <ImageView
                android:id="@+id/add_connecting_dot"
                android:layout_width="60.3dp"
                android:layout_height="10.3dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@null"
                android:src="@drawable/al_add_connecting" />

            <ImageView
                android:layout_width="96.7dp"
                android:layout_height="145.3dp"
                android:contentDescription="@null"
                android:src="@drawable/img_earth_blue" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>