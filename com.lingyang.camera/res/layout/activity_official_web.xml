<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_heder_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:onClick="onClick_Back"
            android:scaleType="center"
            android:src="@drawable/selector_button_back"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="fsf"
            android:textColor="@color/text_dark"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_set_fullscreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/icon_header_record"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/imgbtn_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:src="@drawable/selector_btn_save"
            android:visibility="gone"

            />


    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshWebView
        android:id="@+id/wv_official_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>