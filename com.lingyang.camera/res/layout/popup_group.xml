<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_group"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_below="@+id/rl_home_header"
    android:background="@color/white"
    android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:textColor="@color/orange"
            android:text="@string/all"
            android:drawableTop="@drawable/ic_all_pressed"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:gravity="center_horizontal"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_change"
        android:layout_gravity="center_vertical"
        />
        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:textColor="@color/line"
            android:text="@string/camera_player"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_camear_nor"
            android:paddingBottom="8dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_change"
        android:layout_gravity="center_vertical"
        />
        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:textColor="@color/line"
            android:text="@string/mobile_player"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_iphone_nor"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp"
            />
</LinearLayout>
