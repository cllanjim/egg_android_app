<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/v_user_state"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:background="@drawable/shape_circle_user_online"/>

    <com.lingyang.camera.ui.widget.RoundImageView
        android:id="@+id/ri_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:scaleType="center"
        android:src="@drawable/photo"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/iv_type"
        android:layout_toRightOf="@+id/ri_head"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/iv_type"
        android:layout_toRightOf="@+id/ri_head"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_dial_on"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="11/20 11:20"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ri_head"
        android:background="@color/white"
        />

</RelativeLayout>